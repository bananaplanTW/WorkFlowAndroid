<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/left_pane"
        layout="@layout/overview_left_pane" />

    <include
        android:id="@+id/vertical_divider"
        layout="@layout/v_divider"
        android:layout_width="@dimen/ov_divider_width"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/left_pane" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/vertical_divider"
        android:background="@color/warning_background"
        android:orientation="vertical">

        <LinearLayout
            style="@style/WarningLinearLayout"
            android:background="@android:color/white"
            android:gravity="right"
            android:visibility="gone">

            <TextView
                android:id="@+id/manage_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonStyle.Blue"
                android:text="@string/manage_warning"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/warning_frag_warning_card_container_padding"
            android:orientation="vertical">

            <it.sephiroth.android.library.widget.HListView
                android:id="@+id/warning_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/warning_frag_warning_group_height"
                android:divider="@null"
                widget:hlv_dividerWidth="@dimen/workers_hlist_divider_width"
                android:visibility="gone"/>

            <GridView
                android:id="@+id/warning_cards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="@integer/warning_frag_gridview_column_count"
                android:verticalSpacing="@dimen/warning_frag_warning_cards_vertical_spacing"
                android:horizontalSpacing="@dimen/warning_frag_warning_cards_horizontal_spacing" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
