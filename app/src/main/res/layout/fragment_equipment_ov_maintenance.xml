<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_maintenance_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/bg_solid_textview_bg_green"
        android:text="@string/add_maintenance_record"/>

    <ListView
        android:id="@+id/listview_maintenance_records"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:divider="@color/gray3"
        android:dividerHeight="1dp"
        android:layout_marginTop="17dp"/>

</LinearLayout>