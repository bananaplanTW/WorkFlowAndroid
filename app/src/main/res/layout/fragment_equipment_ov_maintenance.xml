<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_maintenance_record"
        style="@style/ButtonStyle.Green"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/equipment_maintenance_ov_add_maintenance_record_margin_right"
        android:layout_marginTop="@dimen/equipment_maintenance_ov_add_maintenance_record_margin_top"
        android:text="@string/add_maintenance_record"/>

    <ListView
        android:id="@+id/listview_maintenance_records"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/gray3"
        android:dividerHeight="@dimen/divider_height"
        android:layout_marginTop="@dimen/equipment_maintenance_ov_listview_maintenance_records_margin_top"/>

</LinearLayout>