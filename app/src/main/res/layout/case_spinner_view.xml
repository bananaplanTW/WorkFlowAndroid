<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/case_spinner_view_iv1"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_work_black"/>

    <ImageView
        android:id="@+id/case_spinner_view_iv2"
        android:layout_width="15.3dp"
        android:layout_height="15.3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/black_arrow_down"/>

    <TextView
        android:id="@+id/case_spinner_view_tv_vendor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#4a4a4a"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>