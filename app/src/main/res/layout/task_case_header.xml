<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Spinner
        android:id="@+id/task_case_spinner"
        style="@style/CommonSpinnerStyle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/assign_task_divider_height"
        android:background="@color/main_window_divider_color" />

    <com.bananaplan.workflowandroid.utility.ExpandableLayout
        android:id="@+id/task_case_information_expandablelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_headerLayout="@layout/task_case_information_header"
        app:el_contentLayout="@layout/task_case_information_content"
        android:background="@drawable/common_block_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/assign_task_divider_height"
        android:background="@color/main_window_divider_color" />

</LinearLayout>
