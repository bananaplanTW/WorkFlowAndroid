<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="15dp"
    android:paddingRight="30dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="23dp"
            android:layout_alignTop="@id/avatar"
            android:textColor="@color/black1"
            android:layout_toRightOf="@id/avatar"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="23dp"
            android:layout_alignBottom="@id/avatar"
            android:textColor="@color/black1"
            android:layout_toRightOf="@id/avatar"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="23dp"
            android:textColor="@color/black1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/avatar"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/download"
            android:layout_width="68dp"
            android:layout_height="35dp"
            android:layout_marginLeft="405dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:text="@string/worker_ov_tab_status_download"
            android:background="@drawable/bg_solid_textview_bg_blue"
            android:gravity="center"
            android:visibility="gone"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/photo_thumbnail_max_width"
        android:maxHeight="@dimen/photo_thumbnail_max_height"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="14dp"
        android:textColor="@color/gray1"/>

</RelativeLayout>