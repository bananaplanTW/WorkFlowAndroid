<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_warning_group"
    android:padding="@dimen/warning_frag_group_padding">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/black1"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/name"
        android:layout_marginLeft="@dimen/warning_frag_group_count_margin_left"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_solid_textview_bg_gray"
        android:padding="@dimen/warning_frag_group_count_padding"
        android:layout_centerVertical="true"/>

</RelativeLayout>