<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/square_avatar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/square_avatar_background">

    <ImageView
        android:id="@+id/square_avatar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/square_avatar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/square_avatar_text_color"
        android:textSize="@dimen/task_case_information_participated_worker_avatar_text_size"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>