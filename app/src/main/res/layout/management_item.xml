<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/management_item_height"
    android:padding="@dimen/management_item_padding">

    <TextView
        android:id="@+id/management_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/management_item_name_text_color"
        android:textSize="@dimen/management_item_name_text_size"/>

    <ImageView
        android:id="@+id/management_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_delete"
        android:visibility="gone"/>

</RelativeLayout>