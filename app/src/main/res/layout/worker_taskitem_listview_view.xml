<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/listview_taskitem_horozontal_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray5"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/worker_ov_task_item_listview_vg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/worker_taskitem_listview_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_ov_taskitem_listview_start_date"
                android:textColor="@color/black1"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:id="@+id/listview_taskitem_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray3" />

        <LinearLayout
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/worker_taskitem_listview_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_ov_taskitem_listview_status"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:id="@+id/listview_taskitem_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray3" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/worker_taskitem_listview_case_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_ov_taskitem_listview_case_name"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:id="@+id/listview_taskitem_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray3" />

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/worker_taskitem_listview_task_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_ov_taskitem_listview_item_name"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:id="@+id/listview_taskitem_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray3" />

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/worker_taskitem_listview_expected_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_ov_taskitem_listview_expected_time"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:id="@+id/listview_taskitem_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray3" />

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/worker_taskitem_listview_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_ov_taskitem_listview_working_time"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:id="@+id/listview_taskitem_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray3" />

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/worker_taskitem_listview_tool_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_ov_taskitem_listview_tool_used"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:id="@+id/listview_taskitem_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray3" />

        <LinearLayout
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/worker_taskitem_listview_error_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_ov_taskitem_listview_error_count"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:id="@+id/listview_taskitem_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray3" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/worker_taskitem_listview_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/worker_ov_taskitem_listview_warning"
                android:textSize="14dp" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/listview_taskitem_horozontal_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray5"
        android:visibility="gone"/>
</LinearLayout>