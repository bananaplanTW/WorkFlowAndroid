<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/worker_grid_view_item_height"
    android:orientation="vertical"
    android:background="@drawable/worker_grid_view_item_background">

    <RelativeLayout
        android:id="@+id/worker_title_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/worker_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person_black"/>

        <TextView
            android:id="@+id/worker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/worker_name_text_size"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/worker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/worker_title_margin_right"
            android:textSize="@dimen/worker_title_text_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/task_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/working_content_container_margin_left_right"
        android:layout_marginRight="@dimen/working_content_container_margin_left_right"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/working_content_container_background">

        <TextView
            android:id="@+id/task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/working_content_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/working_status_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/working_status_container_padding_left_right"
        android:paddingRight="@dimen/working_status_container_padding_left_right"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/working_status_light"
            android:layout_width="@dimen/working_status_light_width_height"
            android:layout_height="@dimen/working_status_light_width_height"
            android:background="@drawable/working_status_light_background"/>

        <TextView
            android:id="@+id/working_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/working_status_padding_left_right"
            android:paddingRight="@dimen/working_status_padding_left_right"
            android:textSize="@dimen/working_status_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_working_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/working_status_text_size" />

    </LinearLayout>

</LinearLayout>
