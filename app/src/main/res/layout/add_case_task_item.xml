<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/add_case_task_item_elevation"
    android:clipToPadding="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_case_task_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/add_case_task_item_index_padding"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/add_case_task_item_index_text_size"
        android:textColor="@color/add_case_task_item_index_text_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_case_task_item_height"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@drawable/add_case_task_item_background"
        android:elevation="@dimen/add_case_task_item_elevation">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/add_case_task_title_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/add_case_task_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_case_task_title_hint"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/add_case_task_expected_working_time_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/add_case_task_expected_time_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="@string/add_case_task_expected_working_time_hint"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/add_case_task_device_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/add_case_task_equipment_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="@string/add_case_task_working_device_hint"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/add_case_task_worker_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/add_case_task_worker_pic_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="@string/add_case_task_worker_hint"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/add_case_task_detail_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/add_case_task_detail"
            android:textSize="@dimen/add_case_task_item_detail_text_size"
            android:textColor="@color/add_case_task_item_detail_text_color"
            android:background="?selectableItemBackground"/>

    </LinearLayout>

</LinearLayout>


