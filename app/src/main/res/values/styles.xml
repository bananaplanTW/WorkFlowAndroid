<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light">
    </style>

    <!-- Main application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Action bar color -->
        <item name="colorPrimary">@color/action_bar_primary_color</item>
        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/action_bar_primary_color</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/main_window_background_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:dropDownListViewStyle">@style/CommonSpinnerStyle</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
    </style>
    <style name="AppDialogTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="PopupActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Action bar color -->
        <item name="colorPrimary">@android:color/white</item>
        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/action_bar_primary_color</item>

        <item name="android:windowBackground">@color/main_window_background_color</item>
        <item name="android:dropDownListViewStyle">@style/CommonSpinnerStyle</item>
    </style>
    <style name="PopupActivityTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" >
        <item name="colorControlNormal">@color/action_bar_primary_color</item>
    </style>
    <style name="PopupActivityTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TaskCaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/task_case_text_color</item>
    </style>
    <style name="TaskCaseTextStyle.TaskCaseInformationTitle">
        <item name="android:textSize">@dimen/task_case_information_title_text_size</item>
    </style>
    <style name="TaskCaseTextStyle.TaskItemTitle">
        <item name="android:textSize">@dimen/task_card_title_text_size</item>
    </style>
    <style name="TaskCaseTextStyle.TaskItemContent">
        <item name="android:textSize">@dimen/task_card_content_text_size</item>
    </style>


    <style name="TaskItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/task_card_padding</item>
        <item name="android:paddingRight">@dimen/task_card_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CommonSpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:divider">@color/gray5</item>
        <item name="android:dividerHeight">@dimen/divider_height</item>
    </style>

    <style name="OverviewSpinnerStyle" parent="CommonSpinnerStyle">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="OverviewSearchEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ov_search_edittext_height</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/ic_search_black</item>
        <item name="android:paddingLeft">@dimen/ov_search_edittext_padding_left</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DrawerItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_item_height</item>
        <item name="android:paddingLeft">@dimen/drawer_item_padding_left_right</item>
        <item name="android:paddingRight">@dimen/drawer_item_padding_left_right</item>
    </style>
    <style name="DrawerSettingItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_item_setting_height</item>
        <item name="android:background">@color/drawer_setting_background_color</item>
    </style>
    <style name="DrawerItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/drawer_item_text_margin_left</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@drawable/selector_drawer_item_text_color</item>
        <item name="android:textSize">@dimen/drawer_item_text_size</item>
    </style>
    <style name="DrawerItemInfoCountTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/drawer_item_text_color</item>
        <item name="android:paddingLeft">@dimen/drawer_item_number_padding_left_right</item>
        <item name="android:paddingRight">@dimen/drawer_item_number_padding_left_right</item>
        <item name="android:paddingTop">@dimen/drawer_item_number_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/drawer_item_number_padding_top_bottom</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/drawer_item_number_background</item>
    </style>
    <style name="DrawerSubItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/drawer_item_padding_left_right</item>
        <item name="android:paddingRight">@dimen/drawer_item_padding_left_right</item>
        <item name="android:textColor">@drawable/selector_drawer_subitem_text_color</item>
        <item name="android:textSize">@dimen/drawer_subitem_text_size</item>
    </style>

    <style name="AddCaseLeftPartTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/add_case_title_text_color</item>
        <item name="android:textSize">@dimen/add_case_left_part_title_text_size</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/button_padding_left_right</item>
        <item name="android:paddingTop">@dimen/button_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/button_padding_top_bottom</item>
        <item name="android:textColor">@color/button_white_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="ButtonStyle.Blue">
        <item name="android:background">@drawable/blue_button_background</item>
    </style>
    <style name="ButtonStyle.Green">
        <item name="android:background">@drawable/green_button_background</item>
    </style>
    <style name="ButtonStyle.Gray">
        <item name="android:textColor">@color/black1</item>
        <item name="android:background">@drawable/gray_button_background</item>
    </style>


    <style name="TitleEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title_edit_text_text_color</item>
        <item name="android:textSize">@dimen/title_edit_text_title_text_size</item>
    </style>
    <style name="TitleEditText.Title">
    </style>
    <style name="TitleEditText.Content">
        <item name="android:padding">@dimen/title_edit_text_content_padding</item>
        <item name="android:textSize">@dimen/title_edit_text_content_text_size</item>
    </style>


    <style name="DetailedWorkerTaskSchedule">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/detailed_worker_task_schedule_header_text_color</item>
    </style>
    <style name="DetailedWorkerTaskSchedule.Header">
        <item name="android:textColor">@color/detailed_worker_task_schedule_header_text_color</item>
    </style>
    <style name="DetailedWorkerTaskSchedule.Item">
        <item name="android:textColor">@color/detailed_worker_task_schedule_item_text_color</item>
        <item name="android:textSize">@dimen/detailed_worker_task_schedule_item_text_size</item>
    </style>

    <style name="CaseOvStatsLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/case_ov_right_top_pane_case_detail_linear_layout_margin_left</item>
        <item name="android:layout_marginRight">@dimen/case_ov_right_top_pane_case_detail_linear_layout_margin_right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/border_viewgroup_bg_gray</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minHeight">@dimen/case_ov_right_top_pane_case_detail_linear_layout_min_height</item>
    </style>

    <style name="CaseOvStatsTextViewDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/case_ov_right_top_pane_case_detail_tv_string_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/case_ov_right_top_pane_case_detail_tv_string_margin_bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CaseOvStatsTextViewValue" parent="CaseOvStatsTextViewDisplay">
        <item name="android:layout_marginLeft">@dimen/case_ov_right_top_pane_case_detail_linear_layout_margin_left</item>
        <item name="android:layout_marginRight">@dimen/case_ov_right_top_pane_case_detail_linear_layout_margin_right</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24dp</item>
    </style>

</resources>
