<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Actionbar color -->
        <item name="colorPrimary">@android:color/white</item>
        <!-- Status bar color
        <item name="colorPrimaryDark">@android:color/white</item> -->
        <!-- Window color-->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="TaskContainerTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/to_do_list_text_color</item>
    </style>

    <style name="TaskContainerTextStyle.TaskItemTitle">
        <item name="android:textSize">@dimen/task_item_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TaskContainerTextStyle.TaskItemContent">
        <item name="android:textSize">@dimen/task_item_content_text_size</item>
    </style>

</resources>
