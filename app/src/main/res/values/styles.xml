<resources>

    <style name="AppTheme" parent="@style/BaseAppTheme">
    </style>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Action bar color -->
        <item name="colorPrimary">@color/action_bar_primary_color</item>
        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/action_bar_primary_color</item>

        <item name="drawerArrowStyle">@style/BaseAppTheme.DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/main_window_background_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:dropDownListViewStyle">@style/CommonSpinnerStyle</item>
    </style>

    <style name="BaseAppThemeOverlay.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="BaseAppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BaseAppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="TaskCaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/task_case_text_color</item>
    </style>

    <style name="TaskCaseTextStyle.TaskCaseInformationTitle">
        <item name="android:textSize">@dimen/task_case_information_title_text_size</item>
    </style>

    <style name="TaskCaseTextStyle.TaskItemTitle">
        <item name="android:textSize">@dimen/task_item_title_text_size</item>
    </style>

    <style name="TaskCaseTextStyle.TaskItemContent">
        <item name="android:textSize">@dimen/task_item_content_text_size</item>
    </style>

    <style name="TaskItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/task_item_padding</item>
        <item name="android:paddingRight">@dimen/task_item_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CommonSpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:divider">#979797</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
</resources>
